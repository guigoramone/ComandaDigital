<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unoesc.edu.br.comandadigital.CopaActivity"
    android:background="@drawable/fundocopa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pedidos da Copa"
        android:id="@+id/tvTituloCopa"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAtualizarCopa"
        android:src="@drawable/refresh"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ibtConfirma"
        android:layout_alignEnd="@+id/ibtConfirma" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:id="@+id/ltCopa"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btsairtela"
        android:src="@drawable/sairtela"
        android:background="@android:color/transparent"
        android:layout_below="@+id/tvSairTela"
        android:layout_alignLeft="@+id/edtCopa"
        android:layout_alignStart="@+id/edtCopa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="     Sair    "
        android:id="@+id/tvSairTela"

        android:textStyle="bold"

        android:layout_alignBaseline="@+id/tvAtualizar"
        android:layout_alignBottom="@+id/tvAtualizar"
        android:layout_alignLeft="@+id/btsairtela"
        android:layout_alignStart="@+id/btsairtela" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Atualizar"
        android:id="@+id/tvAtualizar"
        android:textStyle="bold"
        android:layout_above="@+id/btAtualizarCopa"
        android:layout_alignLeft="@+id/btAtualizarCopa"
        android:layout_alignStart="@+id/btAtualizarCopa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtCopa"
        android:hint="NÂºItem Fazer/Desfazer"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvTituloCopa"
        android:layout_alignLeft="@+id/tvTituloCopa"
        android:layout_alignStart="@+id/tvTituloCopa" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtConfirma"
        android:layout_alignBottom="@+id/edtCopa"
        android:layout_toRightOf="@+id/edtCopa"
        android:layout_toEndOf="@+id/edtCopa"
        android:src="@drawable/check"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtDesfaz"
        android:src="@drawable/delete"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/edtCopa"
        android:layout_toRightOf="@+id/ibtConfirma"
        android:layout_toEndOf="@+id/ibtConfirma"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

</RelativeLayout>
