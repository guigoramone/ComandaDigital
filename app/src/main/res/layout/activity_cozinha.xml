<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unoesc.edu.br.comandadigital.CozinhaActivity"
    android:background="@drawable/fundocozinha">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pedidos da Cozinha"
        android:id="@+id/tvTituloCozinha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAtualizar"
        android:src="@drawable/refresh"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvTituloCozinha"
        android:layout_toEndOf="@+id/tvTituloCozinha" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/listView"
        android:layout_below="@+id/ltCozinha"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btsairtela"
        android:src="@drawable/sairtela"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btAtualizar"
        android:layout_toLeftOf="@+id/tvTituloCozinha"
        android:layout_toStartOf="@+id/tvTituloCozinha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sair"
        android:id="@+id/tvSairTela"
        android:layout_above="@+id/btsairtela"
        android:layout_alignRight="@+id/btsairtela"
        android:layout_alignEnd="@+id/btsairtela"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Atualizar"
        android:id="@+id/tvAtualizar"
        android:layout_alignTop="@+id/tvSairTela"
        android:layout_alignRight="@+id/btAtualizar"
        android:layout_alignEnd="@+id/btAtualizar"
        android:textStyle="bold"/>
</RelativeLayout>
